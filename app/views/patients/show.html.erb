<%# Create a Patient#show page that lists the date and time for each of their appointments and links to the corresponding doctor's show page. %>

<h1><%=@patient.name%></h1>

Appointments: <%@patient.appointments.each do |a|%>
  <%=link_to "#{a.appointment_datetime.strftime('%B %d, %Y at %H:%M')} Name: #{Doctor.find(a.doctor_id).name}", doctor_path(Doctor.find(a.doctor_id))%>
<%end%>
